<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: F3CC97FF; -fx-padding: 20; -fx-spacing: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visita.controllers.UpdateResponseFormController">

        <!-- Title Label -->
        <Label prefHeight="35.0" prefWidth="202.0" style="-fx-font-size: 18pt; -fx-font-weight: bold;" text="Update Response" />

        <!-- Response Content Label -->
        <Label style="-fx-font-size: 14pt;" text="Response Content:" />

        <!-- Response Content TextArea -->
        <TextArea fx:id="responseContentTextArea" prefHeight="200.0" prefWidth="300.0" style="-fx-font-size: 14pt;" />

        <!-- Buttons -->
        <VBox alignment="CENTER" spacing="10">
                <Button onAction="#handleSave" prefHeight="43.0" prefWidth="86.0" style="-fx-font-size: 14pt; -fx-background-color: #3e005d; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 8px 16px;" text="Save" />
                <Button onAction="#handleCancel" style="-fx-font-size: 14pt; -fx-background-color: #3e005d; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 8px 16px;" text="Cancel" />
        </VBox>
</VBox>
